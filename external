apiVersion: v1
kind: Secret
metadata:
  name: secret-to-be-created
type: Opaque
stringData:
  secret-key-to-be-managed: ""

---
apiVersion: external-secrets.io/v1beta1
kind: SecretStore
metadata:
  name: secretstore-sample
spec:
  provider:
    aws:
      service: SecretsManager
      region: us-east-1
      auth:
        secretRef:
          accessKeyIDSecretRef:
            name: awssm-secret
            key: access-key
          secretAccessKeySecretRef:
            name: awssm-secret
            key: secret-access-key

---
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: example
spec:
  refreshInterval: 1h
  secretStoreRef:
    name: secretstore-sample
    kind: SecretStore
  target:
    name: secret-to-be-created
    creationPolicy: Owner
  data:
  - name: secret-name
    valueFrom:
      secretKeyRef:
        name: awssm-secret
        key: secret-name
  dataFrom:
  - secretKeyRef:
      name: awssm-secret
      key: secret-name
