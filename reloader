apiVersion: apps/v1
kind: Deployment
metadata:
  name: kube-conteiner
  namespace: raf
  labels:
    app: kube-conteiner
  annotations:
    reloader.stakater.com/auto: "true"   # Enable automatic restarts with Reloader

spec:
  replicas: 1
  minReadySeconds: 6
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  selector:
    matchLabels:
      app: http-server-kube
  template:
    metadata:
      labels:
        app: http-server-kube
    spec:
      containers:
      - name: kube-app
        image: davtyan111/lyov-front-1
        ports:
        - name: http
          containerPort: 80
        - name: https
          containerPort: 80
        env:
        - name: MY_SECRET
          valueFrom:
            secretKeyRef:
              name: my-secret
              key: key1   # Replace 'key1' with the actual key from your secret
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
        livenessProbe:
          tcpSocket:
            port: 80
          initialDelaySeconds: 15
          periodSeconds: 10
          timeoutSeconds: 1
          successThreshold: 1
         
---
apiVersion: v1
kind: List
items:
- apiVersion: v1
  kind: Secret
  metadata:
    name: my-secret
    namespace: raf
  type: Opaque
  data:
    key1: dmFsdWUx
    key2: dmFsdWUy
